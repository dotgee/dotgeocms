.page-header
  h1 Listing Users

table.table.table-striped
  thead
    tr
      th Username
      th Email
      th Joined on
  tbody
    - @users.each do |u|
      tr
        td= u.username
        td= u.email
        td= u.created_at.strftime("%d/%m/%Y")
= link_to t("users.new"), [:new, :backend, :user], class: "m-btn blue" if can? :create, User